<p>
	<b>Title:</b>
  	<%= @idea.title %>
</p>

<p>
	<b>Bubbles:</b>
	<% if @idea.bubbles_count > 0 %>
	<% @idea.bubbles.each do |bubble| %>
		<%= bubble.description %>
		<%= link_to 'Delete', [bubble.idea, bubble], :confirm => 'Are you sure you want to delete this bubble?', :method => :delete %>
		<br/>
	<% end %>
	<% else %>
	You don't have any bubbles yet!
	<% end %>
</p>

<p>
	<b>Pops:</b>
	<% if @idea.pops_count > 0 %>
	<% @idea.pops.each do |pop| %>
		<%= pop.description %>
		<%= link_to 'Delete', [pop.idea, pop], :confirm => 'Are you sure you want to delete this pop?', :method => :delete %>
		<br/>
	<% end %>
	<% else %>
	You don't have any pops yet!
	<% end %>
</p>

<p>
	<b>Comments:</b>
	<% @idea.comments.each do |comment| %>
		<%= comment.body %>
		<%= link_to 'Delete', [comment.idea, comment], :confirm => 'Are you sure you want to delete this comment?', :method => :delete %>
		<br/>
	<% end %>
</p>

<br/>

<h2>Add a Bubble:</h2>
<%= form_for([@idea, @idea.bubbles.build]) do |f| %>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :class => "bubble_content" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<br/>

<h2>Add a Pop:</h2>
<%= form_for([@idea, @idea.pops.build]) do |f| %>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :class => "pop_content" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<h2>Add a Comment:</h2>
<%= form_for([@idea, @idea.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, :class => "comment_content" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
 
 
